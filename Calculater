#include <iostream>

using namespace std;

int main()
{ int a, b, c;
char op;
cout<<"                                             *WELCOME TO THE CALCULATER*                                                 "<<endl;
cout<<"                                               *MADE BY ADITYA TIWARI*                                                   "<<endl;
cout<<"1.Enter a value: ";
cin>> a;
cout<<"2.Enter operation ( + - * / % ): ";
cin>>op;
cout<<"3.Enter b value: ";
cin>> b;

if(op== '+'){
    c=a+b;
    cout<<"4.Answer of The Equation : ";
    cout<< c;
}
if (op== '-'){
    c=a-b;
    cout<<"4.Answer of The Equation : ";
    cout<< c;
}
if(op== '*'){
    c=a*b;
    cout<<"4.Answer of The Equation : ";
    cout<< c;
}
if(op== '/'){
    c=a/b;
    cout<<"4.Answer of The Equation : ";
    cout<< c;
}
if(op== '%'){
    c=a%b;
    cout<<"4.Answer of The Equation : ";
    cout<< c;
}





   return 0;



}
